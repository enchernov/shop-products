{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": false
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "rating": {
      "type": "decimal",
      "max": 5,
      "min": 0
    },
    "price": {
      "type": "decimal"
    },
    "categories": {
      "collection": "category",
      "via": "products"
    },
    "available": {
      "type": "integer",
      "required": true,
      "min": 0
    }
  }
}
